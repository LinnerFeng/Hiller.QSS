/*Global Setting*/
QWidget{
    background-color:#797979;
    color:#000;
    font:DejaVu;
}

/*PushButton*/
QPushButton{
    background:qlineargradient(x1:0,x2:1,y1:0,y2:1,stop:0 #797979,stop:1#000000);
    color:white;
    padding:7px;
    border: 1px solid #000000;
}

QPushButton:hover{
    background:qlineargradient(x1:0,x2:1,y1:0,y2:1,stop:0 #797979,stop:1#565656);
    color:white;
}

QPushButton:pressed{
    background:qlineargradient(x1:0,x2:1,y1:0,y2:1,stop:0 #000000,stop:1#797979);
    color:white;
}

/*QToolButton*/
QToolButton{
    background:qlineargradient(x1:0,x2:1,y1:0,y2:1,stop:0 #797979,stop:1#000000);
    color:white;
    padding:7px;
    border: 1px solid #000000;
}

QToolButton:pressed{
    background:qlineargradient(x1:0,x2:1,y1:0,y2:1,stop:0 #000000,stop:1#797979);
    color:white;
}

QToolButton:checked{
    background:qlineargradient(x1:0,x2:1,y1:0,y2:1,stop:0 #797979,stop:1#000000);
    color:white;
}

