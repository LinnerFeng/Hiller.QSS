/*QProgressBar*/
QProgressBar{
    background:#FFFFFF;
    padding:3px;
    border: 1px solid #000000;
    text-align:center;
}

QProgressBar:chunk{
    background:qlineargradient(x1:0,x2:1,y1:0,y2:1,stop:0 #797979,stop:1#000000);
    padding:3px;
    border: 1px solid #000000;
    width:8px;
    margin:0.5px;
}
