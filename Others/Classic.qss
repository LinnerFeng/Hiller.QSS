/*Global Setting*/
QWidget{
    background-color:#FFFFEE;
    color:#000000;
    font:DejaVu;
}

/*PushButton*/
QPushButton{
    background:qlineargradient(x1:0,x2:1,y1:0,y2:1,stop:0 #FFFECC,stop:1#FFFCCC);
    padding:7px;
    border: 1px solid #000000;
}

QPushButton:hover{
    background:qlineargradient(x1:0,x2:1,y1:0,y2:1,stop:0 #FFFFFF,stop:1#FFFCCC);
    color:black;
}

QPushButton:pressed{
    background:qlineargradient(x1:0,x2:1,y1:0,y2:1,stop:0 #FFFFFF,stop:1#FFFCEE);
    color:black;
}

/*QToolButton*/
QToolButton{
    background:qlineargradient(x1:0,x2:1,y1:0,y2:1,stop:0 #FFFFF,stop:1#FFFCCC);
    padding:7px;
    border: 1px solid #000000;
}

QToolButton:pressed{
    background:qlineargradient(x1:0,x2:1,y1:0,y2:1,stop:0 #FFFFFF,stop:1#FFFFEE);
    color:black;
}

QToolButton:checked{
    background:qlineargradient(x1:0,x2:1,y1:0,y2:1,stop:0 #FFFFFF,stop:1#FFFFEE);
    color:black;
}

